#include "scanner.h"

using namespace std;

int asciiMax = 128;

Scanner::Scanner() {
	setupFSAtable();
}

void Scanner::printTheWord() {
	cout<<wordToCheck<<endl;
}

void Scanner::setNewWord(string newWord) {
	wordToCheck = newWord;
	printTheWord();
}

void Scanner::setupFSAtable() {
	int i;
	vector<int> header;
	// Set up header of the matrix
	for(i=0; i < asciiMax; i++){
		header.push_back(i);
		cout<<i;
	}
	fsaTable.push_back(header);
}
